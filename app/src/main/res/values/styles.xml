<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GlassButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    
    <style name="GlassCard" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/translucent_white_10</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/translucent_white_20</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>